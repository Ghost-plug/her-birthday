<body>

    <div class="header">
        ðŸ’– Birthday & Love Special ðŸ’–
    </div>

    <div class="content">
        <h2>Enter the name</h2>
        <input type="text" id="nameInput" placeholder="Enter name here" />
        <button onclick="checkName()">Submit</button>

        <div id="prompt" style="display:none;">
            <h3>Are you not his little heaven?</h3>
            <button onclick="showMessage()">Yes</button>
            <button onclick="showNoMessage()">No</button>
        </div>

        <!-- Message Section -->
        <div class="message-box" id="messageBox">
            <h2>Message: </h2>
            <textarea id="message" rows="5" cols="50" placeholder="Type your message here"></textarea>
        </div>

        <!-- Video Section -->
        <div class="video-box" id="videoBox">
            <h2>Insert Your Video</h2>
            <p>Embed a YouTube or Vimeo video here:</p>
            <input type="text" id="videoLink" placeholder="Insert Video URL" />
            <button onclick="insertVideo()">Insert Video</button>
            <div id="videoContainer"></div>
        </div>

        <!-- Music Section -->
        <div class="music-box" id="musicBox">
            <h2>Insert Your Music</h2>
            <p>Upload your MP3 and paste the link:</p>
            <input type="text" id="musicLink" placeholder="Insert Music URL" />
            <button onclick="insertMusic()">Insert Music</button>
            <audio id="audioPlayer" controls autoplay>
                <!-- Music will go here -->
            </audio>
        </div>
    </div>

    <div class="footer">
        ðŸ’– Thank you for making this day special ðŸ’–
    </div>

    <script>
        function checkName() {
            const name = document.getElementById("nameInput").value;
            if (name !== "Little heaven") {
                document.getElementById("prompt").style.display = "block";
            } else {
                showMessage();
            }
        }

        function showNoMessage() {
            alert("This page is for Little Heaven! ðŸ’–");
        }

        function showMessage() {
            document.getElementById("messageBox").style.display = "block";
            document.getElementById("videoBox").style.display = "block";
            document.getElementById("musicBox").style.display = "block";
        }

        function insertVideo() {
            const videoLink = document.getElementById("videoLink").value;
            const videoContainer = document.getElementById("videoContainer");

            const iframe = document.createElement("iframe");
            iframe.src = videoLink;
            iframe.width = "560";
            iframe.height = "315";
            iframe.frameBorder = "0";
            iframe.allow = "accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture";
            iframe.allowFullscreen = true;
            videoContainer.appendChild(iframe);
        }

        function insertMusic() {
            const musicLink = document.getElementById("musicLink").value;
            const audioPlayer = document.getElementById("audioPlayer");
            audioPlayer.src = musicLink;
        }
    </script>

</body>
